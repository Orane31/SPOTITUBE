<div id="primary" class="p-t-b-30 height-full">
    <div class="container">
        <div class="text-center s-14 l-s-2 my-5">
            <a class="my-5" href="index.html">

                <span>SPOTITUBE</span>

            </a>
        </div>
        <!-- Sign in form -->
        <div class="row">
            <div class="col-md-10 mx-md-auto">
                <div class="mt-5">
                    <div class="row grid">
                        <div class="col-md-5  p-5">
                            <h1 class="mt-3 mb-6 font-weight-lighter">Modifier mon profil utilisateur</h1>
                            <br>
                                <div class="text-center mt-3">
                                    <%= link_to 'Voir mon profil', @user, class:"btn btn-outline-primary mr-4"%>
                                    <%= link_to "Page d'accueil", root_path, class:"btn btn-outline-secondary"%>
                                </div>
                        </div>
                        <div class="col card p-5" style="width:450px;">
                            <form class="form-material">
                                <!-- Input -->
                                <div class="body">
                                    <!-- Input playlist title -->
                                    <div class="form-group form-float mr-5" >
                                        <div>
                                            <h5 class="mb-3">Ajouter une photo de profil</h5>
                                        </div>
                                        <div class="form-group">
                                            <%= form_tag user_avatars_path(@user), multipart: true do %>
                                                <%= file_field_tag :avatar %>
                                                <%= submit_tag "Ajouter cette photo", class: 'btn btn-primary' %>
                                            <% end %>
                                        </div>
                                    </div>
                                    <!-- Input playlist description-->
                                    <%= form_with(model: user, local: true, method: :put) do |update| %>
                                    <div class="form-group form-float row mr-5">
                                        <div class="col">
                                            <div>
                                                <h5 class="mb-1">Mon pseudo</h5>
                                            </div>
                                            <div class="form-line">
                                                <%= update.text_field :name, class:"form-control" %>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div>
                                                <h5 class="mb-1">Adresse email</h5>
                                            </div>
                                            <div class="form-line">
                                                <%= update.email_field :email, class:"form-control" %>
                                            </div>
                                        </div>
                                        <br>
                                    </div>
                                    <div class="form-group form-float  mr-5">
                                        <div>
                                            <h5 class="mb-1 mt-2">Description</h5>
                                        </div>
                                        <div class="form-line">
                                            <%= update.text_field :description, class:"form-control" %>
                                        </div>
                                        <br>
                                    </div>
                                    <input type="submit" class="btn btn-outline-primary btn-sm pl-4 pr-4" value="Valider">
                    <% end %>
            

                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
