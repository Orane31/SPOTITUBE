<div id="primary" class="p-t-b-30 height-full">
    <div class="container">
        <div class="text-center s-14 l-s-2 my-5">
            <a class="my-5" href="index.html">

                <span>SPOTITUBE</span>

            </a>
        </div>
        <!-- Sign in form -->
        <div class="row">
            <div class="col-md-10 mx-md-auto">
                <div class="mt-5">
                    <div class="row grid">
                        <div class="col-md-5  p-5">
                            <h1 class="mt-3 font-weight-lighter">Créer une nouvelle playlist</h1>
                        </div>
                        <%= form_with model: @playlist, local: true do |form| %>
                        <div class="col card p-5" style="width:500px;">
                            <form class="form-material">
                                <!-- Input -->
                                <div class="body">
                                    <!-- Input playlist title -->
                                    <div class="form-group form-float mr-5" >
                                        <div>
                                            <h5 class="mb-1">Titre de la playlist</h5>
                                        </div>
                                        <div class="form-line">
                                                <%= form.text_field :title, class: "form-control", placeholder: 'Insérer le titre ici', class: 'form-control' %>
                                        </div>
                                    </div>
                                    <!-- Input playlist description-->
                                    <div class="form-group form-float mr-5">
                                        <div class="form-line">
                                            <div>
                                                <h5 class="mb-1">Description de la playlist</h5>
                                            </div>
                                            <div class="input-group">
                                                <%= form.text_area :description, placeholder: 'Insérer la description ici', class: 'form-control' %>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Radio buttons private mode -->
                                    <div class="form-group form-float  mr-5">
                                        <div class="form-line">
                                            <div class="input-group">
                                                <h5 class="mb-3 mt-2">Statut de la playlist</h5>
                                            </div>
                                            <div>
                                                <%= form.radio_button :private_mode, false %> Public </span>
                                            </div>
                                            <div>
                                                <%= form.radio_button :private_mode, true %> Privé
                                            </div>
                                        </div>
                                        <br>
                                    <input type="submit" class="btn btn-outline-primary btn-sm pl-4 pr-4" value="Valider">
                                </div>
                        <% end %>

            

                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
