    <% if user_signed_in? %>
                      <div class="xv-slide" data-bg-possition="top" style="background-image:url('assets/img/demo/b1.jpg');">
                        <div class="has-bottom-gradient">
                            <div class="p-md-5 p-3">
                                <div class="row">
                                    <div class="col-12 col-lg-6 animated">
                                        <div class="xv-slider-content clearfix color-white">
                                            <br>
                                              <h1 class="s-64 mt-5 font-weight-lighter">Toutes les playlists</h1>
                                              <div class="pt-3">
                                                  <p><%= link_to "Créer une nouvelle playlist", new_playlist_path, class: 'btn btn-outline-success btn-sm' %></p>
                                              </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 text-center">
                <% @playlists.each do |playlist| %>
            <% if playlist.owner_id == current_user.id %>
                    <div class="card">
                    <div class="card-body">
                        <h5 class="mt-0 text-center"><%= playlist.title  %></h5>
                        <p class="text-info"><%= playlist.description %></p>
                        <% if playlist.private_mode == false %>
                        <p><%= link_to "Voir cette playlist", playlist_path(:id => playlist.id), class: 'btn btn-outline-success btn-sm' %></p>
                        <% else%>
                        <p>Cette playlist est privée, sorry</p>
                        <% end %>
                    </div>
                    </div>
                <% end %>
                <% end %>
                </div>

                <% end %>