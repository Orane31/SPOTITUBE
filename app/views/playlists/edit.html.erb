<div id="primary" class="p-t-b-30 height-full">
    <div class="container">

        <!-- Sign in form -->
        <div class="row">
            <div class="col-md-10 mx-md-auto">
                <div class="mt-5">
                    <div class="row grid">
                        <div class="col-md-5  p-5">
                            <h1 class="mt-3 font-weight-lighter">Modifier la playlist <%= @playlist.title %></h1>
                        </div>
                        <%= form_for @playlist do |f| %>
                        <div class="col card p-5" style="width:500px;">
                            <form class="form-material">
                                <!-- Input -->
                                <div class="body">
                                    <!-- Input playlist title -->
                                    <div class="form-group form-float mr-5" >
                                        <div>
                                            <h5 class="mb-1">Titre de la playlist</h5>
                                        </div>
                                        <div class="form-line">
                                            <%= f.text_field :title, class: 'form-control' %>
                                        </div>
                                    </div>
                                    <!-- Input playlist description-->
                                    <div class="form-group form-float mr-5">
                                        <div>
                                            <h5 class="mb-1">Description de la playlist</h5>
                                        </div>
                                        <div class="form-line">
                                            <div class="input-group">
                                                <%= f.text_area :description, class: 'form-control' %>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Radio buttons private mode -->
                                    <div class="form-group form-float  mr-5">
                                        <div class="form-line">
                                            <div class="input-group">
                                                <h5 class="mb-3 mt-2">Statut de la playlist</h5>
                                            </div>
                                            <div>
                                                <%= f.radio_button :private_mode, false %> Public </span>
                                            </div>
                                            <div>
                                                <%= f.radio_button :private_mode, true %> Priv√©
                                            </div>
                                        </div>
                                        <br>
                                    <input type="submit" class="btn btn-outline-primary btn-sm pl-4 pr-4" value="Valider">
                                </div>
                        <% end %>

            

                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>